<div id="login-page">
        
        <form action="/login" method="post">
        <div id="login" class="login">
            <div class="line"></div>
            <div class="container">
                <div class="title">
                    <span>Đăng nhập</span>
                </div>
    
                <div class="form-login">
                    <div class="form-user-name">
                        <label for="user_name">Nhập tên người dùng :</label>
                        <input type="text" id="user_name" name="username" placeholder="Nhập người dùng ..">
                    </div>
                    <div class="form-user-password">
                        <label for="password">Nhập mật khẩu :</label>
                        <input type="password" name="password" id="password" placeholder="Nhập mật khẩu ...">
                    </div>
                </div>
    
                <div class="action">
                    <div class="login-button">
                        <button onclick="calculation_accetoken()" type="submit">Đăng nhập</button>
                    </div>
        
                    <div class="foget-password">
                        <a href="">Quên mật khẩu?</a>
                       
                    </div>
        
                    <div class="line">
        
                    </div>
        
                    <div class="register-button">
                        <button>Tạo tài khoản mới</button>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>